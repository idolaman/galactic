{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": ".mcp-build-cache/unit-tests",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "tests/unit/**/*.ts",
    "src/lib/branch-search-focus.ts",
    "src/lib/load-project-branches.ts"
  ]
}
